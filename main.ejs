<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Main</title>
    <link rel="stylesheet" href="pairup.css" />
  </head>
  <body>
    <div class="section-Main">
      <div class="mainWindow">
        <div class="Window">
          <div class="designWindow">
            <div class="sizeArea">
              <label class="designWindow-Label" for="fontSize">Font Size</label>
              <select id="fontSize" name="fontSize">
                <option value="16">16</option>
                <option value="18">18</option>
                <option value="20">20</option>
                <option value="22">22</option>
              </select>
            </div>
            <div class="themeArea">
              <label class="designWindow-Label" for="theme">Theme</label>
              <select id="theme" name="theme">
                <option value="volvo">Volvo</option>
                <option value="saab">Saab</option>
              </select>
            </div>
            <div class="languageArea">
              <label class="designWindow-Label" for="language">language</label>
              <select id="language" name="language">
                <option value="C++">C++</option>
                <option value="Python">Python</option>
                <option value="Java">Java</option>
                <option value="JavaScript">JavaScript</option>
              </select>
            </div>
          </div>
          <div class="codeWindow">
            <textarea></textarea>
          </div>
        </div>
        <!-- Window End -->
        <div class="videoAndChatBox">
          <!-- Video Call -->
          <div id="video-container">
            <video autoplay id="second-video"></video>
            <video autoplay id="my-video" muted="true"></video>
          </div>
          <!-- Chat room -->
          <div class="panel-body">
            <ul
              class="media-list"
              style="height: 195px; overflow-y: scroll"
              id="chatbox-listMessages"
            ></ul>
          </div>
          <div class="panel-footer">
            <div class="input-group">
              <input
                type="text"
                class="form-control"
                placeholder="Enter message"
                id="userMessage"
              />
              <span class="input-group-btn">
                <button
                  type="button"
                  class="btn btn-submit"
                  onclick="sendMessage()"
                >
                  SEND
                </button>
              </span>
            </div>
          </div>
        </div>
        <!-- Video & Chat box end -->
      </div>
      <!-- Main Window END-->
    </div>
  </body>
</html>
